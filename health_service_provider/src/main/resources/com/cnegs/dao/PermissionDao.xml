<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cnegs.dao.PermissionDao">

    <select id="findByRoleId" parameterType="java.lang.Integer" resultType="com.cnegs.pojo.Permission">
        select * from t_permission
        where id in (select permission_id from t_role_permission where role_id = #{roleId});
    </select>

</mapper>
