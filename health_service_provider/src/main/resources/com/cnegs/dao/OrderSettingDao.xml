<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cnegs.dao.OrderSettingDao">

    <insert id="add" parameterType="com.cnegs.pojo.OrderSetting">
        insert into t_ordersetting(orderDate,number,reservations) values (#{orderDate},#{number},#{reservations})
    </insert>

    <update id="update" parameterType="com.cnegs.pojo.OrderSetting">
        update t_ordersetting set number = #{number} where orderDate = #{orderDate}
    </update>

    <select id="queryCountbyDate" parameterType="java.util.Date" resultType="long">
        select count(id) from t_ordersetting where orderDate=#{orderDate}
    </select>

    <select id="queryOrderSettingByMonth" parameterType="map" resultType="com.cnegs.pojo.OrderSetting">
        select * from t_ordersetting where orderDate between #{begin} and #{end}
    </select>

    <select id="getOrderSettingByDate" parameterType="date" resultType="com.cnegs.pojo.OrderSetting">
        select * from t_ordersetting where orderDate=#{orderDate}
    </select>

    <!--更新已预约人数-->
    <update id="editReservationsByOrderDate" parameterType="com.cnegs.pojo.OrderSetting">
        update t_ordersetting set reservations = #{reservations} where orderDate = #{orderDate}
    </update>
</mapper>
